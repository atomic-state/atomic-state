{
    "compilerOptions": {
      "watch":true,
      "outDir": "./",
      "module": "commonjs",
      "target": "es5",
      "lib": ["es6", "dom", "es2019"],
      "sourceMap": true,
      "allowJs": false,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "declaration": true
    },
    "include": ["src"],
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts"
    ],
    "types": ["typePatches"]
  }